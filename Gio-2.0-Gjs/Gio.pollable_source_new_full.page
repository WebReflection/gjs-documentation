function pollable_source_new_full(pollable_stream: <link href="../GObject-2.0/GObject.Object.page">GObject.Object</link>, child_source: <link href="../GLib-2.0/GLib.Source.page">GLib.Source</link>, cancellable: <link xref="Gio.Cancellable">Gio.Cancellable</link>): <link href="../GLib-2.0/GLib.Source.page">GLib.Source</link> {
